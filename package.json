{
  "name": "mailer-send-ts",
  "version": "1.6.1",
  "description": "Typescript package for MailerSend",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "directories": {
    "lib": "./lib"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config jestconfig.json --coverage && jest-coverage-badges",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "prepare": "npm run build"
  },
  "author": {
    "name": "Iaromir Trinta",
    "email": "iarki90@gmail.com"
  },
  "bugs": {
    "url": "https://github.com/IARKI/mailer-send-ts/issues"
  },
  "homepage": "https://github.com/IARKI/mailer-send-ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IARKI/mailer-send-ts.git"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "jest": "^27.2.4",
    "jest-coverage-badges": "^1.1.2",
    "nock": "^13.1.3",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "gaxios": "^5.0.1"
  },
  "keywords": [
    "mailersend",
    "typescript",
    "mailer-send",
    "types",
    "email"
  ]
}
